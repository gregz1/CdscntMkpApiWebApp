@model CdiscountMarketPlaceApi_WebApp.Models.GetProductListByIdentifierMessage
using CdscntMkpApiReference_Prod
@{
    ViewData["Title"] = "GetProductListByIdentifier";
}



<br/>
<br />
<div>
    <div class="container">
        <h2>GetProductListByIdentifier</h2>
        <div class="panel-group">
            <p>Click on the collapsible panel to request.</p>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#RequestXML">RequestXML</a>
                    </h4>
                </div>
                <div id="RequestXML" class="panel-collapse collapse">
                    <div class="panel-body"><pre lang="xml"> @Html.DisplayFor(model => model._RequestXML)</pre></div>
                </div>
            </div>
            <p>Click on the collapsible panel to response.</p>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#MessageXML">MessageXML</a>
                    </h4>
                </div>
                <div id="MessageXML" class="panel-collapse collapse">
                    <div class="panel-body"><pre lang="xml"> @Html.DisplayFor(model => model._MessageXML)</pre></div>
                </div>
            </div>
            <p>Click on the collapsible panel to response.</p>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#Results">Results</a>
                    </h4>
                </div>
                <div id="Results" class="panel-collapse collapse">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Picture</th>
                                    <th>Ean</th>
                                    <th>Brand</th>
                                    <th>Category</th>
                                    <th>Sku</th>
                                    <th>Name</th>
                                    <th>Color</th>
                                    <th>Size</th>
                                    <th>ErrorMessage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pi in Model._ProductListByIdentifierMessage.Result.ProductListByIdentifier)
                                {
                                    if(@pi.HasError==true)
                                    { 
                                    <tr class="bg-danger">
                                        <td>
                                            <div class="thumbnail">
                                                <a href=@pi.ImageUrl target="_blank">
                                                    <img src=@pi.ImageUrl alt="Lights" style="width:100%">
                                                    <div class="caption">
                                                        <p>Picture</p>
                                                    </div>
                                                </a>
                                            </div>
                                        </td>
                                        <td>@pi.Ean</td>
                                        <td>@pi.BrandName</td>
                                        <td>@pi.CategoryCode</td>
                                        <td>@pi.FatherProductId</td>
                                        <td>@pi.Name</td>
                                        <td>@pi.Color</td>
                                        <td>@pi.Size</td>                                        
                                        <td>@pi.ErrorMessage</td>
                                    </tr>}
                                    else {
                                        <tr class="bg-success">
                                            <td>
                                                <div class="thumbnail">
                                                    <a href=@pi.ImageUrl target="_blank">
                                                        <img src=@pi.ImageUrl alt="Lights" style="width:100%">
                                                        <div class="caption">
                                                            <p>Click to display</p>
                                                        </div>
                                                    </a>
                                                </div>
                                            </td>
                                            <td>@pi.Ean</td>
                                            <td>@pi.BrandName</td>
                                            <td>@pi.CategoryCode</td>
                                            <td>@pi.FatherProductId</td>
                                            <td>@pi.Name</td>
                                            <td>@pi.Color</td>
                                            <td>@pi.Size</td>
                                            <td>@pi.ErrorMessage</td>
                                        </tr>}
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



